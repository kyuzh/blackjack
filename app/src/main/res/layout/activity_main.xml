<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="new "
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Start"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Again"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imageview3"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:rotation="0"></ImageView>

            <ImageView

                android:id="@+id/imageview1"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:rotation="0"
                android:rotationY="0"></ImageView>

            <ImageView

                android:id="@+id/imageview0"
                android:layout_width="72dp"
                android:layout_height="match_parent"></ImageView>

            <ImageView

                android:id="@+id/imageview2"
                android:layout_width="72dp"
                android:layout_height="match_parent"></ImageView>

            <ImageView

                android:id="@+id/imageview4"
                android:layout_width="72dp"
                android:layout_height="match_parent"></ImageView>


        </LinearLayout>

        <TextView
            android:id="@+id/set_button3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="12sp"></TextView>

        <TextView
            android:id="@+id/set_button1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Appuyer New"
            android:textSize="25dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imageview8"
                android:layout_width="72dp"
                android:layout_height="match_parent"></ImageView>

            <ImageView

                android:id="@+id/imageview6"
                android:layout_width="72dp"
                android:layout_height="match_parent"></ImageView>

            <ImageView

                android:id="@+id/imageview5"
                android:layout_width="72dp"
                android:layout_height="match_parent"></ImageView>

            <ImageView

                android:id="@+id/imageview7"
                android:layout_width="72dp"
                android:layout_height="match_parent"></ImageView>

            <ImageView

                android:id="@+id/imageview9"
                android:layout_width="72dp"
                android:layout_height="match_parent"></ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/set_button2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="12dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/set_button4"
                android:layout_width="267dp"
                android:layout_height="44dp"
                android:background="@color/white"
                android:text="montantplayer=1000"
                android:textSize="12dp"></TextView>

            <Button
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="31dp"
                android:layout_gravity="left"
                android:background="#6BB618"
                android:text="log in"
                android:textColor="@color/white"
                android:textSize="10dp"></Button>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/Hit"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Hit"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/Stand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Stand"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/Double"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Double"
            android:textColor="@color/white"
            android:textSize="20dp"></Button>

    </LinearLayout>

</LinearLayout>