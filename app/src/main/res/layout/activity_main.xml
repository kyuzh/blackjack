<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="new "
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Start"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Again"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imageview0"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

            <ImageView

                android:id="@+id/imageview1"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

            <ImageView

                android:id="@+id/imageview2"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

            <ImageView

                android:id="@+id/imageview3"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

            <ImageView

                android:id="@+id/imageview4"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>


        </LinearLayout>

        <TextView
            android:id="@+id/set_button3"
            android:layout_width="match_parent"
            android:layout_height="59dp"

            android:background="@color/white"
            android:textSize="10dp"></TextView>

        <TextView
            android:id="@+id/set_button1"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@color/white"
            android:text="Appuyer New"
            android:textSize="10dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imageview5"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

            <ImageView

                android:id="@+id/imageview6"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

            <ImageView

                android:id="@+id/imageview7"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

            <ImageView

                android:id="@+id/imageview8"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

            <ImageView

                android:id="@+id/imageview9"
                android:layout_width="72dp"
                android:layout_height="116dp"></ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/set_button2"
            android:layout_width="match_parent"
            android:layout_height="52dp"

            android:background="@color/white"
            android:textSize="10dp"></TextView>

        <TextView
            android:id="@+id/set_button4"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/white"
            android:text="montantplayer=1000"
            android:textSize="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/Hit"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Hit"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/Stand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Stand"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>

        <Button
            android:id="@+id/Double"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#6BB618"
            android:text="Double"
            android:textColor="@color/white"
            android:textSize="20dp"></Button>

    </LinearLayout>

</LinearLayout>